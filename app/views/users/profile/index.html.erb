<script type="text/javascript">
    function follow() {
        $.ajax({
            url:"<%= follow_path(@user.id) %>",
            type:"post",
            success:function (data) {
                $("#follow_button .ui-btn-text").html(data);
                if (data == "Follow") {
                    $('#follow_notice').html("Not Followed");
                } else {
                    $('#follow_notice').html("Followed");
                }
            }
        });
    }
</script>

<%= image_tag @photo, :style => "float:left; border-radius:5px;margin-right:10px;max-width:80px" %>
<h4><%= @name.titlecase %>
  <br>
  <small><%= @headline %></small>
  <br>
  <span id="follow_notice"><%= Follower.find_by_user_id_and_follower_id(current_user.id, @user.id).blank? ? "Not Followed" :"Followed" %></span>
</h4>
<br>

<div data-role="navbar">
  <ul>
    <li><%= link_to "#{Follower.find_by_user_id_and_follower_id(current_user.id, @user.id).blank? ? 'Follow':'Unfollow  '}", "#", :'data-role' => "button", :'data-theme' => "a", :onclick => "follow()", :id => "follow_button" %></li>
    <li><%= link_to "Request Meeting", "#", :'data-role' => "button", :'data-theme' => "b" %></li>
  </ul>
</div>
<br>
<strong>Work</strong>
<br>
<ul>
  <% @positions.each do |position| %>
      <li><%= position %></li>
  <% end %>
</ul>
<strong>Education</strong>
<br>
<ul>
  <% @educations.each do |education| %>
      <li><%= education %></li>
