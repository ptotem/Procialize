<%= content_for :page_title do %>
    Procialize: Events
<% end %>

<div class="content-primary">

  <h1>Conference: <br>
    <small><%= @conference.name %></small>
  </h1>


  <ul data-role="listview" data-theme="a" data-divider-theme="b">
    <% @event_days.each do |event_day| %>
        <li data-role="list-divider"><%= event_day.name %>
          <% event_day.events.each do |event| %>
            <li>
              <%= link_to event do %>
                  <%= event.name %>
                  <p class="ui-li-aside"><%= event.start %></p>
              <% end %>
            </li>
        <% end %>
        </li>
    <% end %>

  </ul>
</div>

