<%= content_for :page_title do %>
    Welcome
<% end %>

<h1 id="title_text_front_page">
  Procialize
  <br>
  <%= image_tag "logo.png" %>
  <br>
</h1>

<div class="container">

  <%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin"} do |f| %>

      <h2 class="form-signin-heading">Please sign in</h2>
      <%= f.email_field :email, :class => "input-block-level", :placeholder => "Enter email address" %>
      <%= f.password_field :password, :class => "input-block-level", :placeholder => "Enter password" %>
      <br>
      <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
      <%= link_to image_tag("log-in-linkedin-large.png"), user_omniauth_authorize_path(:linkedin) %>
  <% end %>


</div>





