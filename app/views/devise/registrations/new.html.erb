<div class="container sponsors">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin", :'data-ajax' => "false"}) do |f| %>

      <h2 class="form-signin-heading">Sign Up</h2>
      <%= devise_error_messages! %>

      <div><%= f.text_field :name, :placeholder => "Enter name" %></div>

      <div><%= f.email_field :email, :placeholder => "Enter email address" %></div>

      <div><%= f.password_field :password, :placeholder => "Enter password" %></div>

      <div><%= f.password_field :password_confirmation, :placeholder => "Enter password confirmation" %> </div>
      <br>
      <br>
      <div><%= f.submit "Sign up", :'data-role' => "button", :'data-theme' => "a",:'data-ajax' => "false"  %></div>
      <div><%= link_to "Cancel", new_user_session_path, :'data-role' => "button", :'data-theme' => "a" %></div>

  <% end %>

</div>







