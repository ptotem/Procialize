<% content_for :page_title do %>
    New meetings
<% end %>


<%= form_for :meeting, url: {action: :create} do |f| %>

    <% if @meeting.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

          <ul>
            <% @meeting.errors.full_meeting.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= select_tag 'meeter_users[]', options_for_select(@user_list), :multiple => true%>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name,:'data-mini' => true  %>
    </div>

    <div class="field">
      <%= f.label :location %><br>
      <%= f.text_area :location,:'data-mini' => true  %>
    </div>


    <div class="field">
      <%= f.label :start_time %>
      <%= f.datetime_select :start_time,:'data-mini' => true  %>
    </div>

    <div class="field">
      <%= f.label :end_time %>
      <%= f.datetime_select :end_time,:'data-mini' => true  %>
    </div>


    <div data-role="controlgroup" data-type="horizontal" style="float: right;">
      <%= f.submit "Send", :'data-role' => "button", :'data-ajax' => "false" %>
    </div>

<% end %>























