<%= content_for :page_title do %>
    <span style="color:white">Pro</span><span style="color:darkgray">cialize</span>
<% end %>

<%= content_for :head do %>
    <script type="text/javascript">
        function create_post() {
            var data = {user_id:[], comment:[]}
            data["user_id"].push('<%= @user.id %>');
            data["comment"].push($('#comment').val());
            $.ajax({
                url:"<%= update_status_path %>",
                type:"post",
                data:JSON.stringify(data),
                contentType:"application/json",
                success:function (data) {

                    $('#status_here').html(data);
                    $('#comment').val("");
                    $('[type="submit"]').button('disable');
                }
            });
        }

        $(function () {
            $('[type="submit"]').button('disable');
            $('#comment').focus(function () {
                if ($('#comment').length > 0) {
                    $('[type="submit"]').button('enable');
                } else {
                    $('[type="submit"]').button('disable');
                }
            });
        });

    </script>
<% end %>

<%= content_for :page_menu do %>
    <ul>
      <li><a href="/users/<%= @user.id %>/profile" data-ajax=false data-theme='b'>View Profile</a></li>
      <li><a href="/search/search" data-ajax=false data-theme='b'>Search</a></li>
      <li><%= link_to "Logout", destroy_user_session_path, :method => :delete, :'data-ajax' => false, :'data-theme' => 'b' %></li>
    </ul>
<% end %>



<div style="margin-top: 0">
  <div style="float: right;margin-top: -1em">
    <% unless current_user.id==1 %>
        <a href="/contacts/new" data-ajax=false data-role=button>Contact</a>
    <% end %>
    <a href="/invitees/new" data-ajax=false data-role=button>Invite</a>
  </div>
  <%= image_tag @photo, :style => "float:left; border-radius:5px;margin-right:10px;max-width:80px;vertical-align:50px;" %>
  <%= @name.titlecase %>
  <br>
  <small><%= @headline %></small>
  <br>
  <small><%= @batch %></small>
</div>

<div id="location" style="font-weight: bold;margin-top: 20px;">
  <% if !@last_seen.nil? %>
      Last Seen at   <%= @last_seen.name %>
  <% end %>
  <% if !@created_at.nil? %>
      at <%= @created_at.created_at %>
  <% end %>
</div>
<br>
<hr>


<%#= @post.name %>
<div id="status_here" class="status" style="font-style: italic;"><%= @post.name %></div>
<div id="text">
  <%= text_area_tag :comment, "", :placeholder => "Write up your thoughts" %>
</div>
<div id="stat_button">
  <%= submit_tag "Post it!", :'data-role' => "button", :'data-theme' => "a", :onclick => "create_post();" %>
</div>
<hr>

<% if !@upcoming_meetings.blank? %>
    <% @upcoming_meetings.each do |meeting| %>
        <div class="fbinfobox1">
          <a style="color: #000000;text-decoration: none" href="<%= meeting_path(meeting) %>" data-ajax="false">
            <h3><%= ((meeting.meeters.select { |m| m.status }.map { |m| m.user.name } << meeting.user.name).delete_if { |n| n==current_user.name }).join(", ") %></h3>

            <p><%= meeting.name %> @ <%= Location.find(meeting.location).name %></p>

            <p class="ui-li-aside">
              <strong><%= meeting.start_time %> hrs on <%= meeting.start_time.strftime("%d %b") %></strong></p>
          </a>
        </div>
    <% end %>
<% end %>


<% if !@upcoming_events.blank? %>
    <% @upcoming_events.each do |event| %>
        <div class="fbinfobox1">
          <%= link_to event, :style => "color: #000000;text-decoration: none" do %>
              <%= event.name %>
              <p class="ui-li-aside"><%= event.start %></p>
          <% end %>
        </div>
    <% end %>
<% end %>

<hr>
