<%= content_for :page_title do %>
    <span style="font-size: 0.8em;">Collateral</span>
<% end %>






<% @tracks.each do |e| %>
    <div data-role="collapsible" data-collapsed="false" data-collapsed-icon="arrow-r"  data-expanded-icon="arrow-d">
      <h6 style= "font-size: 0.8em;text-shadow: none;" ><%= e.name %></h6>
      <ul data-role="listview">
        <% @tra= AssetsDownload.find_all_by_track_id(e.id) %>
        <% @tra.each do |f| %>
            <li data-icon="file-text">
              <a style= "font-size: 0.8em;" target="_blank" href="<%= f.downloadable %>">
               <%= f.downloadable.original_filename %>
              </a>
            </li>
        <% end %>
      </ul>
    </div>
    <br>
    <br>
<% end %>

