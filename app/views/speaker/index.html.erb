<%= content_for :page_title do %>
    Speakers
<% end %>




<div data-role="collapsible-set">
  <% @speak.sort_by(&:name).each do |s| %>
      <div data-role="collapsible" data-mini="true">
        <h6> <%= s.name %></h6>
        <div class="fbinfo">
          <table>
            <tr>
              <td style="vertical-align: top;"><%= image_tag s.avatar.url, :style => 'max-height:100px;max-width:100px;margin:10px;' %></td>
            </tr>

            <tr>
              <td><div style="font-size: 0.8em;font-weight: normal">
                <% TrackSpeaker.find_all_by_speaker_id(s.id).each_with_index do |s, index| %>
                    <% unless Track.find(s.track_id).nil? %>
                        <% if index==0 %>
                            Speaking at:-
                        <% end %>
                        <% if index != 0 %>
                            ,
                        <% end %>
                        <%= Track.find(s.track_id).name %>
                    <% end %>
                <% end %>
                <hr>
                 <span style="text-shadow: none;font-size: 1em;">
                   <%= raw s.speaker_details %>
                 </span>
              </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
  <% end %>
</div>










