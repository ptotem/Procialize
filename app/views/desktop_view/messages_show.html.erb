
<%= content_for :jj do %>
    <script src="/assets/testing/dashboard/javascripts/application.js" type="text/javascript"></script>
<% end %>



<div class="container-fluid">
  <div class="row-fluid">
    <div class="span7">


      <div style="margin-bottom: 20px;">
        <div class="big-button-bar">
          <a class="button large eventer" href="/desktop_events">
            <i class=" icon-calendar "></i>
            <span>Programme</span>
          </a>


          <a class="button large delegater" href="/delegates_search">
            <i class="icon-group"></i>
            <span>Delegates</span>
          </a>

          <a class="button large speakinger" href="/desktop_speaker">
            <i class="icon-user"></i>
            <span>Speakers</span>
          </a>

          <a class="button large questioner" href="/desktop_ask_question">
            <i class="icon-question-sign "></i>
            <span>Questions</span>
          </a>

          <!--<a class="button large feedbacker" href="/desktop_ratings">-->
            <!--<i class="icon-volume-up"></i>-->
            <!--<span>Feedback</span>-->
          <!--</a>-->

          <a class="button large downloadables" href="/desktop_assets_download">
            <i class=" icon-folder-open"></i>
            <span>Download</span>
          </a>
        </div>
      </div>









      <!----------------------Start of meetings_show----------------------------->

      <div class="black-box tex" >
        <div class="tab-header">
         <% if params[:unread] %>
              Unread Messages
          <% end %>
          <% if params[:read] %>
              Messages Received
          <% end %>
          <% if params[:sent] %>
              Messages Sent
          <% end %>
        </div>
        <ul class="recent-comments">
          <li class="separator">


            <h5>
              <table>
                <tr>
                  <td class="headtd">From:</td>
                  <td class="normtd">&nbsp;&nbsp;<%= @message.user.name.titlecase %></td>
                </tr>
                <tr>
                  <td class="headtd">To:</td>
                  <td class="normtd">&nbsp;&nbsp;<%= @message.receipients.map { |r| r.user.name.titlecase }.join(", ") %></td>
                </tr>
                <tr>
                  <td class="headtd">Sent at:</td>
                  <td class="normtd">&nbsp;&nbsp;<%= @message.created_at %> hrs on <%= @message.created_at.strftime("%m/%d/%Y") %></td>
                </tr>
              </table>
            </h5>
            <% unless @message.body.blank? %>
                <div class="padded" style="min-height: 5em; border:solid 1px black; border-radius: 5px;background: white;color:black;">
                  <%= raw @message.body %>
                </div>
            <% end %>

             <br>
            <% if !params[:sent] %>
                <a style="width:15%;" class="button gray" href="<%= desktop_focussed_message_path(@message.user, @message) %>/?reply=true">Reply</a>
            <% end %>

            <a style="width:15%;float:right;" class="button gray" href="<%= desktop_focussed_message_path(@message.user, @message, "all") %>?forward=true">Forward</a>



          </li>
        </ul>

      </div>
      <!----------------------End of meetings_show------------------------------>




    </div>


    <div class="span5">
      <div class="row-fluid">
        <div class="span12">
          <%= render :partial => "event_wall" %>
        </div>
      </div>
    </div>


    <!-------------------------->

    <div class="span5">
      <div class="row-fluid">
        <div class="span12">
          <%= render :partial => "splash_zone" %>
        </div>
      </div>
    </div>






  </div>
</div>


