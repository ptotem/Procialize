                <%= image_tag "avatar.png", :style => "float:left; border-radius:5px;margin-right:10px;max-width:100px" %>
            <% else %>
                <%= image_tag @user.user_photo,:style => "float:left; border-radius:5px;margin-right:10px;max-width:100px" %>
            <% end %>


            <h4 style="margin-top: 0px;margin-left: 58px;"><% unless @name.nil?  %><%= @name.titlecase %>    <% end  %>
              <% if @user.avatar.url!='/avatars/original/missing.png' %>
                  <a style="float:right;background: #ffffff;" href="<%= @user.avatar.url %>"><img src="/assets/procdownload.png"></a>
              <% end %>
              <br>

              <table>
                <tr>
                  <td>
                    <% if !@headline.blank? %><small><%= @headline  %></small><% end %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <% if !@industry.blank? %><small><strong style="color: #c0c0c0;">Background: </strong><%= @industry %> </small><% end %>
                  </td>
                </tr>

                <tr>
                  <td>
                    <% if !@location.blank? %><small><strong style="color: #c0c0c0;">Location: </strong><%= @location %></small><br><% end %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <% if !@skills.blank? %><small><strong style="color: #c0c0c0;">Skills: </strong><%= @skills %></small><br><% end %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <% if !@interest.blank? %><small><strong style="color: #c0c0c0;">Interested in: </strong><%= @interest %></small><br><% end %>
                  </td>
                </tr>
              </table>
                 <br>
              <div style="float: right;">
                <% if @user==current_user %>
                    <a class="button gray" href="<%= current_user.id %>/desktop_edit_profile">Edit your profile</a>
                <% end %>
              </div>
            </h4>
            <br>
            <br>
            <br>

            <div id="status_here" class="status"><%= @post.name unless @post.blank? %></div>


            <form class="fill-up">
              <div id="text">
                <%= text_area_tag :comment, "", :placeholder => "Pen down your thoughts" %>
              </div>
              <div id="stat_button">


                <a class="button gray" href="#" class="form_btn" id="form_btn_id">Post it now!</a>
                <%#= submit_tag "Post it now!", :onclick => "create_post();", :class => "button gray", :style => "width:15%;" %>
              </div>
            </form>
            <br>
            <hr>

            <script>

                $('#form_btn_id').click(function(){
                    if ($("#comment").val()==""){
                    <%= add_gritter("Please Pen Down your Thoughts", :title => "Error!",:image => :warning,:time => 2000  ) %>
                    }
                    else{
                        $('#err_msg').text("");
                        create_post();
                    }
                });


                $(function() {
                    $( "#accordion" ).accordion({
                        active: false,
                        collapsible: true
                    });
                });
            </script>

            <div id="accordion">
              <h5>Event Wall</h5>
              <div>
                <% @graffiti.each do |post| %>
                        <p style="color: white;">
                          <% unless post.user.picture.blank? %>
                            <p style="width:32px;max-width:32px;"><%= image_tag(post.user.picture) %></p>
                          <% end %>

                        <%= link_to post.user.name.titlecase, delegate_profile_index_path(post.user)%>
                          <%= post.created_at %>
                         <%= post.name.truncate(15) %>

                        </p>
                        <hr>
                    <% end %>
              </div>
            </div>


            <br>

            <div id="posting" class="fbinfobox1" style="display: none;">
              <% if @post %>
                  <% if @post.user!=current_user %>
                      <div style="background: rgba(178,204,255,0.93); width:100%;padding-left:5px;padding-top:4px;padding-bottom:4px;border-radius:5px;font-weight: normal;">
                        <span style="color:#333333;font-size:0.8em;font-weight:normal;"><%= @post.user.name.titlecase %></span>
                        <span style="float:right;margin-right: 5px;font-size: 0.7em;font-weight: normal;margin-top: 4px;"><%= @post.created_at %></span>
                      </div>
                      <table>
                        <tr>
                          <% unless @post.user.picture.blank? %>
                              <td style="width:32px;max-width:32px;"><%= image_tag(@post.user.picture) %></td>
                          <% end %>
                          <td>
                            <p style="margin-left: 5px;margin-bottom: 5px;margin-top: 5px;font-size: 0.8em;"><%= post.name %></p>
                          </td>
                        </tr>
                      </table>
                  <% end %>
              <% end %>
            </div>


          </li>
        </ul>
      </div>

      <!----------------------End of delegates------------------------------>


    </div>

    <div class="span5">
      <div class="row-fluid">
        <div class="span12">
          <div class="black-box tex" style="max-height: 150px;">
            <div class="tab-header">
              Event Wall
            </div>
            <ul class="recent-comments" style="list-style: none;">
              <% @conference=Conference.last %>
              <% @user=current_user %>
              <% @graffiti=(User.all-(Follower.find_all_by_user_id_and_conference_id(@user.id, @conference.id).map { |f| User.find(f.follower_id) })-[current_user]-Organizer.all.map { |o| o.user }).map { |u| u.posts }.flatten.last(30).sort_by(&:created_at).reverse %>
              <% @graffiti.each do |post| %>

                  <li class="separator">
                    <div class="avatar pull-left">
                      <% if post.user.picture.blank? %>
                          <%= image_tag "avatar.png" %>
                      <% else %>
                          <%= image_tag(post.user.picture) %>
                      <% end %>
                    </div>
                    <div class="article-post">
                      <div class="user-info"> Posted
                        by <%= link_to post.user.name.titlecase, delegate_profile_index_path(post.user) %>
                        at <%= post.created_at %> </div>
                      <div class="user-content">"<%= post.name.truncate(10) %>"</div>
                    </div>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>


