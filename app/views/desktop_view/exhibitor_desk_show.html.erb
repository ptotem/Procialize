<!----------------------Start of delegates------------------------------>

<div class="black-box tex" id="delegate_profile_of_user">

  <ul class="recent-comments">
    <li class="separator">
      <% if !@exhibitor.exhi_logo.blank? %>
          <%= image_tag @exhibitor.exhi_logo.url, :style => "float:left; border-radius:5px;margin-right:10px;max-width:80px" %>
      <% end %>

      <h4 style="margin-top: 0px;"><%= @exhi_name.titlecase %>

        <table>

          <tr>
            <td>
              <% if !@exhi_industry.blank? %><small><strong style="color: #c0c0c0;">Industry: </strong><%= @exhi_industry %> </small><% end %>
            </td>
          </tr>


          <tr>
            <td>
              <% if !@exhi_description.blank? %><small><strong style="color: #c0c0c0;">Description: </strong><%= raw @exhi_description %></small><br><% end %>
            </td>
          </tr>


          <tr>
            <td>
              <% if !@exhi_stall.blank? %><small><strong style="color: #c0c0c0;">Stall No: </strong><%= @exhi_stall %></small><br><% end %>
            </td>
          </tr>

          <tr>
            <td>
              <% if !@exhi_contact_no.blank? %><small><strong style="color: #c0c0c0;">Contact No: </strong><%= @exhi_contact_no %></small><br><% end %>
            </td>
          </tr>

          <tr>
            <td>
              <% if !@exhibitor.brouchers.blank? %>
                  <small>
                    <a target="_blank"  href="<%=@exhibitor.brouchers.url%>" data-ajax=false data-role=button data-mini=true>Company Brochure<i class=" icon-download  "></i></a>
                  </small>
              <% end %>
            </td>
          </tr>


          <tr>
            <td>
              <% if !@exhibitor.broucher2.blank? %>
                  <small>
                    <a target="_blank"  href="<%=@exhibitor.broucher2.url%>" data-ajax=false data-role=button data-mini=true>Product Brochure<i class=" icon-download  "></i></a>
                  </small>
              <% end %>
            </td>
          </tr>

          <tr>
            <td>
              <small>
                <% @user_name.each do |u|  %>
                    <table cellspacing="10">
                      <% if !u.name.nil? %>
                          <strong style="color: #c0c0c0;">Represented by: </strong>
                       <tr>
                          <td align="position"valign="position"><%= u.name %></td>
                        <td align="position"valign="position">
                          <a style="font-size: 0.8em;margin-left: 10px;" class="button gray" href="<%= desktop_focussed_meeting_path(u) %>">Request Meeting</a>
                        </td>
                        <td align="position"valign="position">
                          <a style="font-size: 0.8em;margin-left: 10px;" class="button gray" href="<%= desktop_focussed_message_path(u) %>/?reply=true">Send Message</a>
                        </td>

                      </tr>
                        <% end %>
                    </table>
                <% end %>
              </small>

            </td>
          </tr>



        </table>
      </h4>

    </li>
  </ul>
</div>
<!----------------------End of delegates------------------------------>




</div>


<div class="span5">
  <div class="row-fluid">
    <div class="span12">
      <div class="black-box tex" style="max-height: 150px;">
        <div class="tab-header">
          Event Wall
        </div>
        <ul class="recent-comments" style="list-style: none;">
          <% @conference=Conference.last %>
          <% @user=current_user %>
          <% @graffiti=(User.all-(Follower.find_all_by_user_id_and_conference_id(@user.id, @conference.id).map { |f| User.find(f.follower_id) })-[current_user]-Organizer.all.map { |o| o.user }).map { |u| u.posts }.flatten.last(30).sort_by(&:created_at).reverse %>
          <% @graffiti.each do |post| %>

              <li class="separator">
                <div class="avatar pull-left">
                  <% if post.user.picture.blank? %>
                      <%= image_tag "avatar.png" %>
                  <% else %>
                      <%= image_tag(post.user.picture) %>
                  <% end %>
                </div>
                <div class="article-post">
                  <div class="user-info"> Posted
                    by <%= link_to post.user.name.titlecase, delegate_profile_index_path(post.user) %>
                    at <%= post.created_at %> </div>
                  <div class="user-content">"<%= post.name.truncate(10) %>"</div>
                </div>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


