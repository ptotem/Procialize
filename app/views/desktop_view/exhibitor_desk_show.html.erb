              <li><%= image_tag HomePageLogo.first.image_eight.url, :class => "img_style" rescue "" %></li>
              <li><%= image_tag HomePageLogo.first.image_nine.url, :class => "img_style" rescue "" %></li>
              <li><%= image_tag HomePageLogo.first.image_ten.url, :class => "img_style" rescue "" %></li>
              <li><%= image_tag HomePageLogo.first.event_image.url, :class => "img_style" rescue "" %></li>
              <li><%= image_tag HomePageLogo.first.conference_image.url, :class => "img_style" rescue "" %></li>
