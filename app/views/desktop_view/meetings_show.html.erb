


<%= content_for :jj do %>
    <script src="/assets/testing/dashboard/javascripts/application.js" type="text/javascript"></script>

    <%= javascript_include_tag "jquery.dataTables.min" %>


<% end %>



<div class="container-fluid">
  <div class="row-fluid">
    <div class="span7">
      <div class="row-fluid">

        <div style="margin-bottom: 20px;">
          <div class="big-button-bar">
            <a class="button large eventer" href="/desktop_events">
              <i class=" icon-calendar "></i>
              <span>Events</span>
            </a>


            <a class="button large delegater" href="/delegates_search">
              <i class="icon-group"></i>
              <span>Delegates</span>
            </a>

            <a class="button large speakinger" href="/desktop_speaker">
              <i class="icon-user"></i>
              <span>Speakers</span>
            </a>

            <a class="button large questioner" href="/desktop_ask_question">
              <i class="icon-question-sign "></i>
              <span>Questions</span>
            </a>

            <!--<a class="button large feedbacker" href="/desktop_ratings">-->
              <!--<i class="icon-volume-up"></i>-->
              <!--<span>Feedback</span>-->
            <!--</a>-->

            <a class="button large downloadables" href="/desktop_assets_download">
              <i class=" icon-folder-open"></i>
              <span>Download</span>
            </a>
          </div>
        </div>
        </div>








      <!----------------------Start of meetings_show------------------------------>

      <div class="black-box tex" >
        <div class="tab-header">
          <% if params[:open] %>
              Meetings Requested
          <% end %>
          <% if params[:pending] %>
              Meetings Pending for Acceptance
          <% end %>
          <% if params[:scheduled] %>
              Scheduled Meetings
          <% end %>
        </div>
        <ul class="recent-comments">
          <li class="separator">
            <h5>
              <table>
                <tr>
                  <td class="headtd">Requestor:-</td>
                  <td class="normtd">&nbsp;&nbsp;<%= @meeting.user.name.titlecase %></td>
                </tr>
                <tr>
                  <td class="headtd">Confirmed:-</td>
                  <td class="normtd">&nbsp;&nbsp;<%= ((@meeting.meeters.select { |m| m.status }.map { |m| m.user.name })).join(", ") %></td>
                </tr>
                <tr>
                  <td class="headtd">Tentative:-</td>
                  <td class="normtd">&nbsp;&nbsp;<%= ((@meeting.meeters.select { |m| m.status.nil? }.map { |m| m.user.name })).join(", ") %></td>
                </tr>
                <tr>
                  <td class="headtd">Scheduled:-</td>
                  <td class="normtd">&nbsp;&nbsp;at <%= @meeting.start_time %> hrs on <%= @meeting.start_time.strftime("%m/%d/%Y") %></td>
                </tr>
                <tr>
                  <td class="headtd">Location:-</td>
                  <td class="normtd">&nbsp;&nbsp;<%= Location.find(@meeting.location).name %></td>
                </tr>


              </table>
            </h5>

            <% unless @meeting.name.blank? %>
                <div class="padded" style="min-height: 5em; border:solid 1px black; border-radius: 5px;background: white;color:black;">
                  <%= @meeting.name %>
                </div>
            <% end %>
            <% if @meeting.user==current_user %>
                <%#= link_to "Cancel",@meeting, :method => :delete, :'data-role' => "button" %>
            <% else %>
                <br>
                <% if @meeter.status.nil? %>
                    <%= link_to "Accept", meetings_accept_path(@meeting),:class=>"button gray",:style=>"width:15%;" %>
                <% end %>
            <% end %>
          </li>
        </ul>

      </div>
      <!----------------------End of meetings_show------------------------------>




    </div>

    <div class="span5">
      <div class="row-fluid">
        <div class="span12">
          <%= render :partial => "event_wall" %>
        </div>
      </div>
    </div>


    <!-------------------------->

    <div class="span5">
      <div class="row-fluid">
        <div class="span12">
          <%= render :partial => "splash_zone" %>
        </div>
      </div>
    </div>






  </div>
</div>


