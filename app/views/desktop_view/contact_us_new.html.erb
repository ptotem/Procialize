<%#= content_for :jj do %>
    <!--<script src="/assets/testing/dashboard/javascripts/application_all.js" type="text/javascript"></script>-->
<% #end %>


<div class="container-fluid">
  <div class="row-fluid">

    <div class="span7">
      <div class="row-fluid">
        <div class="span12">
          <%= render :partial => "list" %>
        </div>
      </div>

      <!----------------------Start of Contact Us------------------------------>

      <div class="black-box tex" >
        <div class="tab-header">
          Contact Us
        </div>
        <ul class="recent-comments">
          <li class="separator">
            <%= form_for :message, :html => {:id => "message_form", :class => "fill-up cmxform"} do |f| %>
                <%= f.hidden_field :conference_id, :value => Conference.last.id %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= select_tag 'receipient_users[]', options_for_select(@use) %>
                <br>
                  <%= f.text_area :body, :rows => '5', :style => "height:85px;", :placeholder => "'We hope and sincerely wish that this conference is a value add to you. We further trust that you would have found Procialize an enjoyable experience. We would love to have your comments, thoughts, complaints or feedback. Please do let us know by typing your comments in this space and clicking on the send button. We will definitely get back to you in the shortest possible time.'" %>
                <br>
            <% end %>
            <a class="button gray" href="#" class="form_btn" id="form_btn_id">Send</a>

          </li>
        </ul>
      </div>

      <!----------------------End of Contact Us------------------------------>
    </div>


    <div class="span5">
      <div class="row-fluid">
        <div class="span12">
          <%= render :partial => "event_wall" %>
        </div>
      </div>
    </div>

    <div class="span5">
      <div class="row-fluid">
        <div class="span12">
          <%= render :partial => "splash_zone" %>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
      $(function () {
          $('#form_btn_id').hide();
          $(function () {
              $('#form_btn_id').hide();
              $('#message_body').focus(function () {
                  $('#form_btn_id').show();
                  if (( $('#message_body')).length > 0) {

                  } else {
                      $('#form_btn_id').hide();

                  }
              });

          });

          $('#message_body').blur(function () {
              if ($(this).val().length <= 0) {
                  $('#form_btn_id').hide();
              }
              else {
                  $('#form_btn_id').show();
              }
          });


          $('#form_btn_id').click(function(){
              $('#message_form').attr({
                  action:'contact_us_create',
                  method:'post'
              });
              <%= add_gritter("Request send to Admin", :title => "Success",:image => :success,:time => 1000) %>
              setTimeout(function(){
                  $('#message_form').submit();
              },1500);
          })


      });

  </script>

