        <%#= form_for :meeting,:html => { :id => "meeting_form",:class => " fill-up cmxform" },:remote => true, :url => {:action => :meetings_create} do |f| %>
        <%= form_for :meeting, :html => {:id => "meeting_form", :class => "fill-up cmxform"} do |f| %>
