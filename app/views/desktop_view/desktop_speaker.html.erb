<%= content_for :jj do %>
    <script src="/assets/testing/dashboard/javascripts/application.js" type="text/javascript"
            xmlns="http://www.w3.org/1999/html"></script>
    <%#= javascript_include_tag "jquery.collapse" %>
    <%= stylesheet_link_tag "jquery-ui-1.10.3.custom.min" %>
    <script type="text/javascript">

    </script>



<% end %>



<div class="container-fluid">
<div class="row-fluid">
<div class="span7">
  <div style="margin-bottom: 20px;">
    <div class="big-button-bar">
      <a class="button large eventer" href="/desktop_events">
        <i class=" icon-calendar "></i>
        <span>Programme</span>
      </a>


      <a class="button large delegater" href="/delegates_search">
        <i class="icon-group"></i>
        <span>Delegates</span>
      </a>

      <a class="button large speakinger" href="/desktop_speaker">
        <i class="icon-user"></i>
        <span>Speakers</span>
      </a>

      <a class="button large questioner" href="/desktop_ask_question">
        <i class="icon-question-sign "></i>
        <span>Questions</span>
      </a>

      <!--<a class="button large feedbacker" href="/desktop_ratings">-->
        <!--<i class="icon-volume-up"></i>-->
        <!--<span>Feedback</span>-->
      <!--</a>-->

      <a class="button large downloadables" href="/desktop_assets_download">
        <i class=" icon-folder-open"></i>
        <span>Download</span>
      </a>
    </div>
  </div>
  <div class="black-box tex" id="events">
    <div class="tab-header">
      Speakers
    </div>
    <ul class="recent-comments">
      <li class="separator">

        <script>
            $(function () {
                $("#accordion").accordion({
                    active:true,
                    collapsible:true
                });
            });
        </script>

        <div id="accordion">
          <% @speak.sort_by(&:name).each do |s| %>
              <h5> <%= s.name %></h5>
              <div>
                <p style="color: white;">
                <table>
                  <tr>
                    <% if !image_tag s.avatar.blank? %>
                    <td style="vertical-align: top;"><%= image_tag s.avatar.url, :style => 'max-height:100px;max-width:100px;margin:10px;' %></td>
                   <% end %>
                  </tr>

                  <tr>
                    <td>
                      <div style="color: #ffffff;">
                        <% TrackSpeaker.find_all_by_speaker_id(s.id).each_with_index do |s, index| %>
                            <% unless Track.find(s.track_id).nil? %>
                                <% if index==0 %>
                                    Speaking at:-
                                <% end %>
                                <% if index != 0 %>
                                    ,
                                <% end %>
                                <%= Track.find(s.track_id).name %>
                            <% end %>
                        <% end %>
                        <hr>
                 <span style="text-shadow: none;font-size: 1em;color: #ffffff;">
                   <%= raw s.speaker_details %>
                 </span>
                      </div>
                    </td>
                  </tr>
                </table>
                </p>

              </div>
          <% end %>
        </div>


      </li>
    </ul>
  </div>
</div>


<div class="span5">
  <div class="row-fluid">
    <div class="span12">
      <%= render :partial => "event_wall" %>
    </div>
  </div>
</div>

<div class="span5">
  <div class="row-fluid">
    <div class="span12">
      <%= render :partial => "splash_zone" %>
    </div>
  </div>
</div>




</div>
</div>





