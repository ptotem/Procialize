<%= content_for :jj do %>
    <script src="/assets/testing/dashboard/javascripts/application.js" type="text/javascript" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"></script>
    <%= stylesheet_link_tag "jquery-ui-1.10.3.custom.min" %>
<% end %>



<div class="container-fluid">
      <div class="row-fluid">
            <div class="span7">
              <div class="row-fluid">
                <div class="span12">
                  <%= render :partial => "list" %>
                </div>
              </div>

              <!----------------------Start of Meetings------------------------------>
              <div class="black-box tex" id="events">
                <div class="tab-header">Meetings</div>
                <ul class="recent-comments">
                  <li class="separator">
                    <%= link_to "Create New","/meetings_new", :class => "button gray",:style=>"float:right;width:15%;" %><br><br>
                    <div id="accordion">
                      <h5 style="font-size: 1em;">Scheduled Meetings <span class="pull-right badge black"><%= @scheduled.size %></span></h5>
                      <div>
                        <% @scheduled.each do |meeting| %>
                            <p>
                              <a href="<%= meetings_show_path(meeting) %>?scheduled=true">
                                <%= meeting.start_time %> hrs on <%= meeting.start_time.strftime("%d %b") %> , invited by
                                <%= ((meeting.meeters.select{|m| m.status}.map{|m| m.user.name} << meeting.user.name).delete_if{|n| n==current_user.name}).join(", ") %>
                                regarding "<%= meeting.name.truncate(20) %>"
                              </a>
                            </p>
                            <hr>
                        <% end %>
                      </div>

                      <h5 style="font-size: 1em;">Pending Invitations <span class="pull-right badge black"><%= @pending.size %></span></h5>
                      <div>
                        <% @pending.each do |meeting| %>
                            <p>
                              <a href="<%= meetings_show_path(meeting) %>?pending=true">
                                <%= meeting.start_time %> hrs on <%= meeting.start_time.strftime("%d %b") %> , invited by
                                <%= ((meeting.meeters.select{|m| m.status}.map{|m| m.user.name} << meeting.user.name).delete_if{|n| n==current_user.name}).join(", ") %>
                                regarding "<%= meeting.name.truncate(20) %>"
                              </a>
                            </p>
                            <hr>
                        <% end %>

                      </div>

                      <h5 style="font-size: 1em;">Sent Request<span class="pull-right badge black"><%= @open.size %></span></h5>
                      <div>
                        <% @open.each do |meeting| %>
                            <p style="color: white;">
                              <a href="<%= meetings_show_path(meeting) %>?open=true">
                                <%= meeting.start_time %> hrs on <%= meeting.start_time.strftime("%d %b") %>
                                , you invited - <%= meeting.meeters.map{|m| m.user.name}.join(", ") %>
                                regarding "<%= meeting.name.truncate(20) %>"
                              </a>
                            </p>
                            <hr>
                        <% end %>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
              <!----------------------End of Meetings------------------------------>
            </div>

            <div class="span5">
              <div class="row-fluid">
                <div class="span12">
                  <%= render :partial => "event_wall" %>
                </div>
              </div>
            </div>

            <div class="span5">
              <div class="row-fluid">
                <div class="span12">
                  <%= render :partial => "splash_zone" %>
                </div>
              </div>
            </div>
      </div>




  <script type="text/javascript">

      $(function () {
          $( "#accordion" ).accordion({
              active: false,
              collapsible: true
          });

      });

  </script>

