<%= content_for :jj do %>
    <script src="/assets/testing/dashboard/javascripts/application.js" type="text/javascript"></script>
    <%= javascript_include_tag "jquery.collapse" %>
    <%= stylesheet_link_tag "jquery-ui-1.10.3.custom.min" %>

    <script type="text/javascript">

        function create_que() {

            $("#questionable_track_id").change(function () {
                var data = {track_id:[], quest_name:[]}
                data["track_id"].push('<%= @track.id %>');
                data["quest_name"].push($('#questionable_quest_name').val());
                $.ajax({
                    url:"<%= desktop_create_quest_path %>",
                    type:"post",
                    data:JSON.stringify(data),
                    contentType:"application/json",
                    success:function (data) {
                        <%= add_gritter("Your Question has been sent for the moderator's approval", :title => "Success",:image => :success,:time => 1000  ) %>
                    }
                });

            });
        }

        function rate_me(drop_down) {
            var data = {user_id:[], track_id:[], rate:[]}
            data["user_id"].push('<%= current_user.id %>');
            data["track_id"].push('<%= @track.id %>');
            data["rate"].push(drop_down);
            $.ajax({
                url:"<%= feed_me_path %>",
                type:"post",
                data:JSON.stringify(data),
                contentType:"application/json",
                success:function (data) {
                    <%= add_gritter("Thank You for your valuable feedback", :title => "Success",:image => :success,:time => 1000  ) %>
                }
            });

        }

    </script>

<% end %>



<div class="container-fluid">
<div class="row-fluid">
<div class="span7">
  <div class="row-fluid">

    <div style="margin-bottom: 20px;">
      <div class="big-button-bar">
        <a class="button large eventer" href="/desktop_events">
          <i class=" icon-calendar "></i>
          <span>Programme</span>
        </a>


        <a class="button large delegater" href="/delegates_search">
          <i class="icon-group"></i>
          <span>Delegates</span>
        </a>

        <a class="button large speakinger" href="/desktop_speaker">
          <i class="icon-user"></i>
          <span>Speakers</span>
        </a>

        <a class="button large questioner" href="/desktop_ask_question">
          <i class="icon-question-sign "></i>
          <span>Questions</span>
        </a>

        <!--<a class="button large feedbacker" href="/desktop_ratings">-->
          <!--<i class="icon-volume-up"></i>-->
          <!--<span>Feedback</span>-->
        <!--</a>-->

        <a class="button large downloadables" href="/desktop_assets_download">
          <i class=" icon-folder-open"></i>
          <span>Download</span>
        </a>
      </div>
    </div>

  </div>


  <!----------------------Start of events------------------------------>

  <div class="black-box tex">
    <div class="tab-header">
      Event Details
    </div>
    <ul class="recent-comments">
      <li class="separator">
        <div>
          <table cellpadding="7">
            <tr>
              <th rowspan="4" style="margin-left:10px;">
                <% unless @track.track_img.blank? %><%= image_tag @track.track_img.url(:thumb) %>
                <% end %></th>
              <td style="vertical-align: middle; font-size: 0.9em; font-weight: bold;">
                <span style="margin-left: 50px;"><%= @track.name %></span>&nbsp;&nbsp;<span style="font-size: 0.8em;">from</span>&nbsp;&nbsp;<%= @track.start %>
                <span style="font-size: 0.8em;">to</span> <%= @track.end %>
              </td>
            </tr>
            <tr>
              <td style="vertical-align: middle; font-size: 0.9em; font-weight: bold;">
                <%@count = @speaker_name.count %>
                <% @countless=@count-1 %>
                <% @speaker_name.each_with_index do |s, index| %>
                    <% unless s.name.blank? %>
                        <% if index==0 %>
                            <span style="color: #c0c0c0;margin-left: 50px;">Speakers:</span>
                        <% end %>
                        <%= s.name %><% if index !=@countless %>,<% end %>
                    <% end %>
                <% end %>
              </td>
            </tr>
          </table>
          <hr>
          <h3 style="font-size: 1em;line-height: 21px;font-weight: normal;">
            <%= raw @track.description %>
          </h3>
          <hr>
        </div>


        <script>
            $(function () {
                $("#accordion").accordion({
//                        active: false,
                    collapsible:true
                });
            });
        </script>
        <div style="float: left;">
          <% if @my_attendee.blank? %>
              <%= link_to "Join this Event", desktop_accept_path(@track), :flash_notice => "Accepted", :class => "button gray", :id => "attend" %>
          <% end %>

        </div>
        <br>
        <hr>
        <h6>Would you like to pose a question regarding the event?</h6>

        <%= form_for :questionable, :html => {:class => "fill-up"}, url: {action: :desktop_create_quest} do |f| %>
            <%= f.hidden_field :user_id, :value => current_user.id %>

            <%= f.text_field :quest_name, :'data-mini' => true, :placeholder => "Ask question ?" %>

            <%= f.hidden_field :track_id, :value => @track.id %>

            <br>
            <%= f.submit "Send", :onclick => "create_que();", :class => "button gray", :style => "width:15%;", :id => "add_max" %>
        <% end %>
        <hr>
        <script type="text/javascript">
            $(function () {

                $('#add_max').click(function () {
                    <%= add_gritter("You question is send to the moderators approval", :title => "Success",:time => 3000) %>
                });

                $('#attend').click(function () {
                    <%= add_gritter("Your request accepted", :title => "Success",:image => :success,:time => 1000) %>
                });

                $('[type="submit"]').hide();
                $(function () {
                    $('[type="submit"]').hide();
                    $('#questionable_quest_name').focus(function () {
                        $('[type="submit"]').show();
                        if (( $('#questionable_quest_name')).length > 0) {

                        } else {
                            $('[type="submit"]').hide();

                        }
                    });

                });

                $('#questionable_quest_name').blur(function () {
                    if ($(this).val().length <= 0) {
                        $('[type="submit"]').hide();
                    }
                    else {
                        $('[type="submit"]').show();
                    }
                });

            });

        </script>

        <div>
          <h6>Would you like to give your feedback on the event?</h6>
          <select id="select_menu" data-mini="true" onchange="rate_me($(this).val());" style="float:left;">
            <option value="1">Great Value add</option>
            <option value="2">Good topic and session</option>
            <option value="3">Interesting talks</option>
            <option value="4">Satisfactory</option>
            <option value="5">Didnâ€™t match expectations</option>
          </select>
        </div>
        <br><br><br>
        <hr>
      </li>
    </ul>


    <div id="accordion">
      <h5>Friends who are attending</h5>
      <div>
        <% @attendees.each do |user| %>
            <% unless user.nil? %>
                <p>
                  <a href="<%= delegate_profile_index_path(user) %>">
                    <%= user.name.titlecase %>
                  </a>
                </p>
                <hr>
            <% end %>
        <% end %>
      </div>
    </div>
      <br>

  </div>
  <!----------------------End of events------------------------------>


</div>

