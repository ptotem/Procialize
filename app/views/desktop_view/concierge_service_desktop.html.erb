    <script src="/assets/testing/dashboard/javascripts/application.js" type="text/javascript"></script>
<% end %>



<div class="container-fluid">
  <div class="row-fluid">
    <div class="span7">
      <div class="row-fluid">
        <div class="span12">
          <%= render :partial => "list" %>
        </div>
      </div>







      <!----------------------Start of events------------------------------>

      <div class="black-box tex" >
        <div class="tab-header">
          Concierge
        </div>
        <ul class="recent-comments">

          <li class="separator">
           <form class="fill-up">
            <p>
              <%= label_tag 'service' %>
              <%= select_tag 'service', options_for_select(@concierge_services_name) %>
            </p>

            <p>
              <%= label_tag 'comment' %>
              <%= text_area_tag 'comment' %>
            </p>
           </form>
            <p><%= button_tag 'Request', :id => "request",:class=>"button gray",:style=>"width:15%;" %></p>
            <script type="text/javascript">
                $(function(){
                    $('#notying').hide();
                    $('#comment').prop("disabled", true);
                    $('#comment').val(gon.services_comment[$("#service").prop("selectedIndex")]);
                    $('#service').change(function(){
                        $('#comment').val(gon.services_comment[$("#service").prop("selectedIndex")]);
                        if($("#service").prop("selectedIndex")==gon.services_comment.length-1){
                            $('#comment').prop("disabled", false);
                        }
                        else{
                            $('#comment').prop("disabled", true);
                        }
                    });
                    $('#request').click(function () {
                        $.ajax({
                            url:'/order_services_desktop/' + $('#comment').val()
                        }).done(function() {
                                    <%= add_gritter("Request send to admin", :title => "Success",:image => :success,:time => 2000  ) %>
                                    $("select").val("0");
                                    $('#comment').val("");

                                });

                    });
                });
            </script>
          </li>
        </ul>
        <div id="notying"></div>
      </div>
      <!----------------------End of events------------------------------>
    </div>


  <div class="span5">
    <div class="row-fluid">
      <div class="span12">
        <%= render :partial => "event_wall" %>
      </div>
    </div>
  </div>


  <!-------------------------->

