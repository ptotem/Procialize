<%= content_for :jj do %>
    <script src="/assets/testing/dashboard/javascripts/application.js" type="text/javascript"xmlns="http://www.w3.org/1999/html"></script>
    <%= stylesheet_link_tag "jquery-ui-1.10.3.custom.min" %>
<% end %>



<div class="container-fluid">
      <div class="row-fluid">
            <div class="span7">
              <div class="row-fluid">
                <%= render :partial => "list" %>
              </div>

              <!----------------------Start of Messages------------------------------>

              <div class="black-box tex" id="events">
                <div class="tab-header">Messages</div>
                <ul class="recent-comments">
                  <li class="separator">
                    <%= link_to "Create New","/messages_new", :class => "button gray",:style=>"float:right;width:15%;" %><br><br>

                    <div id="accordion">
                      <h5>Unread Messages <span class="pull-right badge black"><%= @unread.size %></span></h5>
                      <div>
                        <% @unread.each do |message| %>
                            <p>
                              <a href="<%= messages_show_path(message) %>?unread=true">
                                  Rec'd at <%= message.created_at %> hrs on <%= message.created_at.strftime("%d %b") %>
                                  from <%= message.user.name %>
                                  regarding "<%= message.body.truncate(20) %>"
                              </a>
                            </p><hr>
                        <% end %>
                      </div>

                      <h5>Read Messages <span class="pull-right badge black"><%= @read.size %></span></h5>
                      <div>
                        <% @read.each do |message| %>
                            <p>
                              <a href="<%= messages_show_path(message) %>?read=true">
                                  Rec'd at <%= message.created_at %> hrs on <%= message.created_at.strftime("%d %b") %>
                                  from <%= message.user.name %>
                                  regarding "<%= message.body.truncate(20) %>"
                              </a>
                            </p><hr>
                        <% end %>
                      </div>

                      <h5>Sent Messages <span class="pull-right badge black"><%= @sent.size %></span></h5>
                      <div>
                        <% @sent.each do |message| %>
                            <p>
                              <a href="<%= messages_show_path(message) %>/?sent=true">
                                  Sent at <%= message.created_at %> hrs on <%= message.created_at.strftime("%d %b") %>
                                  to <%= message.receipients.map{|r| r.user.name}.join(", ") %>
                                  regarding "<%= message.body.truncate(20) %>"
                              </a>
                            </p><hr>
                        <% end %>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>

              <!----------------------End of Messages------------------------------>
            </div>

            <div class="span5">
              <div class="row-fluid">
                <div class="span12">
                  <%= render :partial => "event_wall" %>
                </div>
              </div>
            </div>

            <div class="span5">
              <div class="row-fluid">
                <div class="span12">
                  <%= render :partial => "splash_zone" %>
                </div>
              </div>
            </div>
      </div>


  <script type="text/javascript">
      $(function() {
          $( "#accordion" ).accordion({
              active: false,
              collapsible: true
          });
      });
  </script>

